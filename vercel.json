{
  "version": 2,
  "buildCommand": "npm install --prefix frontend && npm install --prefix backend && npm run build",
  "outputDirectory": "frontend/dist",
  "functions": {
    "backend/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}